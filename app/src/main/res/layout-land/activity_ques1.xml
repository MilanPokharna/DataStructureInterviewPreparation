<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="2dp"
    android:orientation="vertical"
    android:id="@+id/re"
    android:background="@drawable/gradient"
    tools:context=".activities.ques1">
<RelativeLayout
    android:id="@+id/re1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/ques"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:textSize="30sp"
        android:text="QUESTION :"
        style="@style/ques"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_toRightOf="@+id/ques"
        android:id="@+id/question"
        style="@style/question"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        tools:text="what is the question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
    <RelativeLayout
        android:id="@+id/re2"
        android:layout_below="@+id/re1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/ans"
        android:text="ANSWER :"
        style="@style/ans"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="38dp"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_toRightOf="@+id/ans"
        android:id="@+id/answer"
        android:textSize="25sp"
        style="@style/answer"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        tools:text="the answer is here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/re3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linear"
        >

        <Button
            android:id="@+id/prev"
            style="@style/ans"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:text="@string/prev"
            android:textAlignment="center"
            android:textColor="#999922"
            android:textSize="20sp" />

        <Button
            android:id="@+id/next"
            style="@style/ans"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/next"
            android:textAlignment="center"
            android:textColor="#999922"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="0.8"
            android:layout_width="0dp"
            android:weightSum="1"
            android:orientation="vertical"
            android:layout_height="150dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:paddingTop="5dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="0.4"
                android:layout_height="0dp">
                <ImageView
                    android:foregroundGravity="center"
                    android:layout_gravity="center"
                    android:layout_width="50dp"
                    android:src="@drawable/logo"
                    android:layout_height="40dp" />
                <TextView
                    android:text="@string/learn_code_online"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:layout_weight="0.4"
                android:textSize="15sp"
                android:paddingLeft="4dp"
                android:fontFamily="serif"
                android:text="Web development, Programming, iOS and Android App development"
                android:layout_width="wrap_content"
                android:layout_height="0dp" />
            <TextView
                android:id="@+id/applink"
                android:layout_weight="0.2"
                android:textSize="20sp"
                android:clickable="true"
                android:focusable="true"
                android:layout_gravity="center"
                android:fontFamily="serif-monospace"
                android:textStyle="bold"
                android:textColor="#00ff52"
                android:text="Learn on the Go App"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:layout_height="150dp">
            <ImageView
                android:id="@+id/app"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/picc"
                android:layout_gravity="fill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>