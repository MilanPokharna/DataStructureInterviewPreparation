<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="8dp"
    android:id="@+id/re"
    android:background="@drawable/gradient"
    tools:context=".activities.ques1">

    <TextView
        android:id="@+id/ques"
        android:textSize="30sp"
        android:text="QUESTION :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@+id/ques"
        android:id="@+id/question"
        android:layout_marginTop="5dp"
        android:textSize="25sp"
        android:text="what is the question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@id/question"
        android:id="@+id/ans"
        android:text="ANSWER :"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@id/ans"
        android:id="@+id/answer"
        android:textSize="25sp"
        android:layout_marginTop="8dp"
        android:text="the answer is here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_below="@+id/ques"
        android:orientation="horizontal"
        android:layout_marginTop="400dp"
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <LinearLayout
            android:layout_weight="0.7"
            android:layout_width="0dp"
            android:weightSum="1"
            android:orientation="vertical"
            android:layout_height="150dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:paddingTop="5dp"
            android:layout_weight="0.4"
            android:layout_height="0dp">
             <ImageView
                 android:layout_gravity="center"
                android:layout_width="50dp"
                 android:src="@drawable/logo"
                android:layout_height="40dp" />
            <TextView
                android:text="Learn Code Online"
                android:textSize="23sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-smallcaps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
            <TextView
                android:layout_weight="0.3"
                android:textSize="15sp"
                android:paddingLeft="9dp"
                android:fontFamily="serif"
                android:text="Web development, Programming, iOS and Android App development"
                android:layout_width="wrap_content"
                android:layout_height="0dp" />
            <TextView
                android:layout_weight="0.3"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:fontFamily="serif-monospace"
                android:textStyle="bold"
                android:textColor="#00ff52"
                android:text="Learn on the Go App"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="0.3"
            android:layout_width="0dp"
            android:layout_height="150dp">
            <ImageView
                android:src="@drawable/picc"
                android:layout_gravity="fill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>