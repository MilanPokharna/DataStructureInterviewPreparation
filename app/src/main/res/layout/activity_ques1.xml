<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="8dp"
    android:id="@+id/re"
    android:background="@drawable/gradient"
    tools:context=".activities.ques1">

    <TextView
        android:id="@+id/ques"
        android:layout_marginTop="45dp"
        android:layout_marginStart="15dp"
        android:textSize="30sp"
        android:text="@string/question"
        style="@style/ques"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@+id/ques"
        android:id="@+id/question"
        style="@style/question"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        tools:text="what is the question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@id/question"
        android:id="@+id/ans"
        android:text="@string/answer"
        style="@style/ans"
        android:layout_marginTop="35dp"
        android:layout_marginStart="15dp"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@id/ans"
        android:id="@+id/answer"
        android:textSize="25sp"
        style="@style/answer"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"
        tools:text="the answer is here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_marginBottom="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linear"
        >

        <Button
            android:id="@+id/prev"
            style="@style/ans"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:text="@string/prev"
            android:textAlignment="center"
            android:textColor="#999922"
            android:textSize="20sp" />

        <Button
            android:id="@+id/next"
            style="@style/ans"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/next"
            android:textAlignment="center"
            android:textColor="#999922"
            android:textSize="20sp"
            tools:ignore="RelativeOverlap" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="DisableBaselineAlignment">
        <LinearLayout
            android:layout_weight="0.7"
            android:layout_width="0dp"
            android:weightSum="1"
            android:orientation="vertical"
            android:layout_height="150dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:paddingTop="5dp"
            android:layout_weight="0.4"
            android:layout_height="0dp"
            tools:ignore="NestedWeights,UseCompoundDrawables">
             <ImageView
                 android:layout_gravity="center"
                android:layout_width="50dp"
                 android:src="@drawable/logo"
                android:layout_height="40dp"
                 tools:ignore="ContentDescription" />
            <TextView
                android:text="@string/learn_code_online"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-smallcaps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
            <TextView
                android:layout_weight="0.3"
                android:textSize="15sp"
                android:paddingStart="9dp"
                android:fontFamily="serif"
                android:text="@string/web_development_programming_ios_and_android_app_development"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                tools:ignore="RtlSymmetry" />
            <TextView
                android:id="@+id/applink"
                android:layout_weight="0.2"
                android:textSize="20sp"
                android:clickable="true"
                android:focusable="true"
                android:layout_gravity="center"
                android:fontFamily="serif-monospace"
                android:textStyle="bold"
                android:textColor="#00ff52"
                android:text="@string/learn_on_the_go_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="0.3"
            android:layout_width="0dp"
            android:layout_height="150dp">
            <ImageView
                android:id="@+id/app"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/picc"
                android:layout_gravity="fill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="ContentDescription" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>